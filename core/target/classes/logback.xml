<configuration>

    <property name="pattern" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} [%-5level][%thread] %logger{36} %class{1}.%method:%line - %msg%n"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${pattern}</pattern>
        </encoder>
    </appender>

    <logger name="com.elminster.workflow" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <root level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>